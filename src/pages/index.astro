---
import Confirmation from '@/components/sections/Confirmation.astro'
import Faq from '@/components/sections/Faq.astro'
import Landing from '@/components/sections/Landing.astro'
import Present from '@/components/sections/Present.astro'
import Schedule from '@/components/sections/Schedule.astro'
import Section from '@/components/ui/Section.astro'
import Layout from '@/layouts/Layout.astro'
---

<Layout>
  <Section id="landing" class="relative md:px-0">
    <Landing />
  </Section>
  <Section id="confirmation" class="bg-primary text-secondary">
    <Confirmation />
  </Section>
  <Section id="schedule" class="relative">
    <Schedule />
  </Section>
  <Section id="present" class="bg-primary text-secondary">
    <Present />
  </Section>
  <Section id="faq">
    <Faq />
  </Section>
</Layout>
